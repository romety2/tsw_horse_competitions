<!DOCTYPE html>
<html>
   <head>
        <% include ../partials/head %>
        <% include ../partials/date %>
        <script src="/js/operationList/grupy.js"></script>
        <script src="/js/restoration/grupy.js"></script>
        <script src="/js/validators/grupy.js"></script>
    </head>
    <body id="body" class="body-show">
        <% include ../partials/menu %>
        <br>
        <div class="opis">
            <a href='/zawody' id="pZw" class='ukryty'></a>
            <a href='/glosowanie' id="pGl" class='ukryty'></a>
            <a href="/glosowanie" id='klik' class='ukryty'></a>
            <h1 class="text-center">Podzał na grupy</h1>
            <div id="komunikat" class="alert alert-danger ukryty">
            </div>
            <form id="zaloguj-form" class="form-horizontal">
                <div class="form-group">
                    <div class="widok-wiersz">
                        <label class="col-sm-1">Grupy:</label>
                        <label class="col-sm-1"></label>
                        <div class="col-sm-6">
                            <select type="text" id="listaGr" name="grupa" class="form-control" multiple>
                            </select>
                            <button id="dodajG-button" type="button" class="btn btn-default" title="Nowa grupa"><span class="glyphicon glyphicon-plus"></span></button>
                            <button id="usunG-button" type="button" class="btn btn-default" title="Nowa grupa"><span class="glyphicon glyphicon-remove"></span></button>
                            <button id="pokazG-button" type="button" class="btn btn-default przesun-widok" title="Pokaż informację"><span class="glyphicon glyphicon-eye-open"></span></button>
                            <div>
                                <div class="col-sm-3"><input id="radio1P" type="radio" name="plec" value="Ogier" checked>Ogiery</div>
                                <div class="col-sm-3"><input id="radio2P" type="radio" name="plec" value="Klacz">Klacze</div>
                            </div>
                        </div>
                    </div>
                </div>
                <h2 id="nazwa-grupy" class="text-center">Grupa</h2>
                <div class="form-group">
                    <label class="col-sm-2">Zawodnicy:</label>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <input type="text" id="szukajZ" class="form-control" placeholder="Wyszukaj">
                        </div>
                     </div>
                     <label class="col-sm-2"></label>
                    <div class="col-sm-3">
                        <select type="text" id="wybZ" class="form-control" multiple>
                        </select>
                        <button id="dodajZ-button" type="button" class="btn btn-default" title="Dodaj zawodnika"><span class="glyphicon glyphicon-plus"></span></button>
                    </div>
                    <label class="col-sm-1"></label>
                    <div class="col-sm-3">
                        <select type="text" id="wybZZ" name="wybZZ" class="form-control" multiple>
                        </select>
                        <button id="usunZ-button" type="button" class="btn btn-default" title="Usuń zawodnika"><span class="glyphicon glyphicon-remove"></span></button>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2">Sędziowie:</label>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <input type="text" id="szukajS" class="form-control" placeholder="Wyszukaj">
                        </div>
                     </div>
                     <label class="col-sm-2"></label>
                    <div class="col-sm-3">
                        <select type="text" id="wybS" class="form-control" multiple>
                        </select>
                        <button id="dodajS-button" type="button" class="btn btn-default" title="Dodaj sędziego"><span class="glyphicon glyphicon-plus"></span></button>
                    </div>
                    <label class="col-sm-1"></label>
                    <div class="col-sm-3">
                        <select type="text" id="wybSS" name="wybSS" class="form-control" multiple>
                        </select>
                        <button id="usunS-button" type="button" class="btn btn-default" title="Usuń sędziego"><span class="glyphicon glyphicon-remove"></span></button>
                    </div>
                </div>
                <script src="/js/search/select.js"></script>
                <div class="form-group text-center">
                    <button id="zacznij-button" type="button" class="btn btn-default" title="Rozpocznij zawody">Rozpocznij zawody</button>
                </div>
                <script src="/js/search/gr.js"></script>
            </form>
        </div>
    </body>
</html>