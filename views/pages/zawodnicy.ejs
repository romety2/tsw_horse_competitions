<!DOCTYPE html>
<html>
   <head>
        <% include ../partials/head %>
        <% include ../partials/date %>
        <script src="/js/crud.js"></script>
        <script src="/js/data.js"></script>
    </head>
    <body id="body" class="body-show">
        <% include ../partials/menu %>
        <h1 class="text-center">Zawodnicy</h1>
        <div class="opis">
            <div>
                <a id="dodaj-button" class="btn btn-success" role="button", title="Nowy zawodnik"><span class="glyphicon glyphicon-plus"></span></a>
            </div>
            <br/>

            <table id="tabela" class="table table-striped">
                <tr>
                    <th>Hodowca</th>
                    <th>Koń</th>
                    <th>Płeć konia</th>
                    <th></th>
                </tr>
            </table>
        </div>
        <div id="dodaj-modal" class="modal">
            <div class="container modal-content">
                <span class="back close"><span class="glyphicon glyphicon-remove"></span></span>
                <h2 class="text-center">Nowy zawodnik</h2>
                    <br>
                    <div data-toggle="validator" class="form-horizontal">
                        <div class="form-group">
                            <label  class="col-sm-2">Imię hodowcy:</label>
                            <div class="col-sm-1 pole-col">
                                <input type="text" min="2" id="opis" class="form-control" required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2">Nazwisko hodowcy:</label>
                            <div class="col-sm-1 pole-col">
                                <input type="text" min="2" id="opis" class="form-control" required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2" >Nazwa konia:</label>
                            <div class="col-sm-1 pole-col">
                                <input type="text" min="2" id="opis" class="form-control" required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2">Data urodzenia konia:</label>
                            <div class="col-sm-1 pole-col">
                                <input type="date" name="data" id="data" class="form-control" placeholder="rrrr-mm-dd" required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2">Płeć konia:</label>
                            <div class="col-sm-1 pole-col">
                                <input type="text" min="2" id="opis" class="form-control" required/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2" >Email:</label>
                            <div class="col-sm-1 pole-col">
                                <input type="text" min="2" id="opis" class="form-control" required/>
                            </div>
                        </div>
                        <div class="form-group text-center">
                                <button id="dodaj" type="submit" class="btn btn-success" title="Dodaj"><span class="glyphicon glyphicon-ok"></span></button>
                                <button class="back btn btn-default" class="close" title="Wróć"><span class="glyphicon glyphicon-arrow-left"></span></button>
                        </div>
                        </div>
              </div>
        </div>
    </body>
</html>